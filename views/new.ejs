<%- include('partials/header') %>
<div class="container">
  <h1 class="display-3 text-center mb-5">
    <small class="text-white-50">Create a </small>new blog!
  </h1>
  <form action="/blogs" method="POST">
    <div class="row align-items-center justify-content-center">
      <div class="form-group col-md-6">
        <label for="title" class="h6">Title</label>
        <input
          type="text"
          class="form-control"
          name="blog[title]"
          id="title"
          placeholder="Title"
          aria-describedby="title"
        />
        <small id="titleHelp" class="form-text text-white-50"
          >Get creative!</small
        >
      </div>
    </div>
    <div class="row justify-content-center align-items-center mt-2">
      <div class="form-group col-md-6">
        <label for="image" class="h6">Image</label>
        <input
          type="url"
          class="form-control"
          id="image"
          name="blog[image]"
          placeholder="Image"
        />
      </div>
    </div>
    <div class="row justify-content-center align-items-center m-3">
      <div class="form-group form-check col-md-6">
        <input type="checkbox" class="form-check-input" id="isDog" />
        <label class="form-check-label" for="isDog"
          >Is the image of a dog?</label
        >
      </div>
    </div>
    <div class="row justify-content-center align-items-center">
      <div class="form-group col-md-6">
        <label for="body" class="h6">Body</label>
        <textarea
          class="form-control"
          id="body"
          name="blog[body]"
          rows="8"
          placeholder="Blog body"
        ></textarea>
      </div>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary w-25 m-4">Submit</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
