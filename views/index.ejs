<%- include('partials/header') %>
<div class="container">
  <h1 class="display-3 text-center mb-5">
    <small class="text-white-50">Welcome to the </small>blog!
  </h1>
  <div class="row row-cols-md-2 row-cols-lg-4">
    <% blogs.forEach((blog) => { %>
    <div class="col mb-4">
      <div class="card h-100">
        <img
          src="<%= blog.image %>"
          class="p-2 pb-3 border-bottom rounded card-img-top img-fluid"
        />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title%></h5>
          <p class="card-text"><%- blog.body.substring(0,100) %></p>
          <p class="text-muted font-italic">
            Created - <%= blog.created.toDateString() %>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
